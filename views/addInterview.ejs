<div class="container mt-5 forms-container">
    <div class="row">
        <div class="col-md-4">
            <form action="/interview/add-interview" method="POST" class="p-4 bg-light border rounded">
                <h1>Add Interview</h1>
                <div class="mb-3">
                    <label for="Name" class="form-label">Company Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required>
                </div>
                <div class="mb-3">
                    <label for="Role" class="form-label">Job Role</label>
                    <input type="text" class="form-control" id="Role" name="Role" required>
                </div>
                <div class="mb-3">
                    <label for="Date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="Date" name="Date" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Interview</button>
                
            </form>
        </div>
    </div>
</div>